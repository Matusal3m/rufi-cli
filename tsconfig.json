{
    "compilerOptions": {
        "target": "es6",
        "lib": ["ES2022"],
        "moduleResolution": "bundler",
        "module": "es2022",
        "declaration": true,
        "sourceMap": true,
        "outDir": "dist",
        "removeComments": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "rootDir": "./src",
        "paths": {
            "@/utils": ["./src/utils/index.ts"],
            "@/persistence": ["./src/persistence/index.ts"],
            "@/cli-core": ["./src/modules/cli_core"],
            "@/process-wrappers": ["./src/modules/process_wrappers"],
            "@/migration": ["./src/modules/migration"]
        },
        "typeRoots": ["./src/**/*"],
        "noUnusedLocals": false,
        "noUnusedParameters": false,
        "noPropertyAccessFromIndexSignature": false
    },
    "include": ["src/**/*", "src/global.d.ts"]
}
